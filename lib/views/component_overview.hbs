{{#extend "iframe"}}
  {{#content "body"}}
    <div class="RoundupComponents">
      {{#if components}}
        {{#each components}}
          <div class="RoundupComponent">
            <a href="/component?file={{this.file}}&embedded=true" class="RoundupComponent-file">{{this.file}}</a>
            <div class="RoundupComponent-html">
              {{{this.html}}}
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="RoundupComponent">
          There are no components yet.
        </div>
      {{/if}}
    </div>
  {{/content}}
{{/extend}}
