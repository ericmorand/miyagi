{{#extend "iframe"}}
{{#content "body"}}
<div class="MiyagiWrapper">
  <div class="MiyagiDocumentation">
    <h1>{{ name }}</h1>
    {{#if documentation}}
    {{{documentation}}}
    {{/if}}
  </div>
  <h2 class="Miyagi-sectionTitle">Information</h2>
  <dl class="MiyagiInformation">
    <div class="MiyagiInformation-wrapper">
      <dt class="MiyagiInformation-attr">Folder</dt>
      <dd class="MiyagiInformation-val"><code>{{ folder }}</code></dd>
    </div>
  </dl>
  {{#if schema}}
  <link rel="stylesheet" href="miyagi/css/prism.css">
  <h2 class="Miyagi-sectionTitle">Schema</h2>
  <pre class="Miyagi-code language-{{schemaType}}"><code>{{{schema}}}</code></pre>
  {{#if schemaError}}
  <p class="MiyagiErrorMessage">{{schemaError}}</p>
  {{/if}}
  {{/if}}
  {{#if variations}}
  <h2 class="Miyagi-sectionTitle">Variations</h2>
  {{/if}}
  {{#each variations}}
  <div class="MiyagiComponent">
    <div class="MiyagiComponent-head">
      <a href="{{ this.url }}" class="MiyagiComponent-file">{{
        this.variation
      }}</a>
      {{#if schemaValidation}}
      <p class="MiyagiComponent-schemaValidation">
        <span
          class="MiyagiStatus MiyagiStatus--{{#if schemaValidation.valid}}valid{{else}}invalid{{/if}}">{{schemaValidation.copy}}</span>
      </p>
      {{/if}}
    </div>
    <div class="MiyagiComponent-html">{{{this.html}}}</div>
  </div>
  {{/each}}
</div>
{{/content}}
{{/extend}}
