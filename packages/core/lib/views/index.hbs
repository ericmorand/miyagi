{{#extend "main"}}
{{#content "body"}}
<nav class="Roundup-nav">
  <h1 class="Roundup-title">
    <a class="Roundup-link Roundup-link--showAll{{#if theme.logo}} has-logo{{/if}}" href="{{ indexPath }}" target="iframe" {{#if showAll }}
      aria-current="page" {{/if}}>
      {{#if theme.logo}}
      <img class="Roundup-projectLogo" src="{{ theme.logo }}" alt="{{ userProjectName }}">
      {{/if}}
      <span class="Roundup-projectName">Overview</span>
    </a>
  </h1>
  {{#if folders}}
  <button class="Roundup-toggleMobileMenu" aria-label="Show menu" aria-expanded="false"></button>
  <div class="Roundup-menu">
    {{#menu folders requestedComponent requestedVariation null null }}{{/menu}}
  </div>
  {{/if}}
</nav>

<main class="Roundup-content">
  <div class="Roundup-frameWrapper">
    <iframe class="Roundup-frame" id="iframe" src="{{iframeSrc}}" name="iframe" title="Components"></iframe>
  </div>
</main>

<aside class="Roundup-tests" {{#if hideTests}} hidden{{/if}}>
  {{#each tests}}
  <div class="RoundupTest RoundupTest--{{this.alias}}" hidden>
    <b class="RoundupTest-title">{{this.title}}</b>
    {{#each this.results}}
    <details class="RoundupResults RoundupResults--{{this.alias}}">
      <summary class="RoundupResults-summary">
        {{this.label}}: <span class="RoundupResults-value RoundupResults-value--{{this.class}}">0</span>
      </summary>
      <div class="RoundupResults-details"></div>
    </details>
    {{/each}}
  </div>
  {{/each}}
</aside>
{{/content}}
{{/extend}}
