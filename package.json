{
	"name": "@miyagi/core",
	"version": "3.3.2",
	"description": "miyagi is a component development tool for JavaScript template engines.",
	"main": "index.js",
	"author": "Michael Gro√üklaus <mail@mgrossklaus.de> (https://www.mgrossklaus.de)",
	"license": "MIT",
	"homepage": "https://www.miyagi.dev",
	"bugs": "https://github.com/miyagi-dev/miyagi/issues",
	"repository": {
		"type": "git",
		"url": "git@github.com:miyagi-dev/miyagi.git"
	},
	"keywords": [
		"components",
		"pattern",
		"library",
		"html",
		"accessibility",
		"validation",
		"frontend"
	],
	"engines": {
		"node": ">=16.10.0"
	},
	"files": [
		"api",
		"bin",
		"dist",
		"index.js",
		"lib"
	],
	"bin": {
		"miyagi": "./bin/miyagi.js"
	},
	"dependencies": {
		"@stoplight/json-schema-sampler": "^0.2.3",
		"ajv": "^8.12.0",
		"anymatch": "^3.1.3",
		"axe-core": "^4.6.3",
		"consolidate": "^0.16.0",
		"cookie-parser": "^1.4.6",
		"css": "^3.0.0",
		"deepmerge": "^4.3.1",
		"directory-tree": "^3.5.1",
		"express": "^4.18.2",
		"js-yaml": "^4.1.0",
		"jsdom": "^21.1.1",
		"marked": "^4.3.0",
		"node-watch": "^0.7.3",
		"socket.io": "^4.6.1",
		"twig": "^1.16.0",
		"yargs": "^17.7.1"
	},
	"devDependencies": {
		"@babel/core": "^7.21.4",
		"@babel/preset-env": "^7.21.4",
		"@rollup/plugin-node-resolve": "^15.0.1",
		"@rollup/plugin-terser": "^0.4.0",
		"@types/jest": "^29.5.0",
		"babel-jest": "^29.5.0",
		"codecov": "^3.8.3",
		"cssnano": "^6.0.0",
		"del": "^6.1.1",
		"eslint": "^8.37.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jsdoc": "^40.1.1",
		"eslint-plugin-prettier": "^4.2.1",
		"gulp": "^4.0.2",
		"gulp-babel": "^8.0.0",
		"gulp-postcss": "^9.0.1",
		"jest": "^29.5.0",
		"jest-environment-jsdom": "^29.5.0",
		"jsdoc-to-markdown": "^8.0.0",
		"postcss": "^8.4.21",
		"postcss-import": "^15.1.0",
		"postcss-preset-env": "^8.3.0",
		"pre-commit": "^1.2.2",
		"prettier": "^2.8.7",
		"rollup": "^3.20.2",
		"stylelint": "^15.4.0",
		"stylelint-config-standard": "^32.0.0",
		"supertest": "^6.3.3"
	},
	"scripts": {
		"build": "gulp build",
		"test": "jest --colors --detectOpenHandles",
		"lint": "stylelint frontend/assets/css/ && eslint lib/ && eslint frontend/assets/js/",
		"fix": "eslint lib/ --fix && eslint frontend/assets/js/ --fix",
		"release": "standard-version",
		"docs": "mkdocs serve"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"lib/**/*.js",
			"index.js"
		],
		"testEnvironment": "jsdom"
	},
	"browserslist": [
		"last 2 versions",
		"> 2%",
		"not ie <= 11",
		"not ie_mob <= 11",
		"not op_mini all",
		"not op_mob < 100",
		"not baidu < 100",
		"not and_qq < 100",
		"not dead"
	],
	"overrides": {
		"json-pointer": ">=0.6.2",
		"minimist": "^1.2.6"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard"
		],
		"rules": {
			"custom-property-pattern": null,
			"declaration-block-no-redundant-longhand-properties": null,
			"keyframes-name-pattern": null,
			"no-descending-specificity": null,
			"number-max-precision": 5,
			"selector-class-pattern": null,
			"media-feature-range-notation": null
		}
	},
	"pre-commit": [
		"lint",
		"test"
	]
}
