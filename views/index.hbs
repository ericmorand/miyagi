{{#extend "main"}}
  {{#content "body"}}
    <nav class="ComponentLibraryNav">
      {{#if folders.children}}
        <h1>
          <a class="ComponentLibraryNav-showAll" href="?pattern=all" target="content"{{#if showAll }} aria-current="page"{{/if}}>Pattern overview</a>
        </h1>
        <div class="ComponentLibraryNav-menu">
          {{#renderMenu folders.children currentPattern currentVariation null null }}{{/renderMenu}}
        </div>
      {{/if}}
    </nav>

    <main class="ComponentLibraryContent">
      <iframe class="ComponentLibraryContent-frame" id="iframe" src="{{iframeSrc}}" frameborder="0" name="iframe" title="Patterns"></iframe>
      <div class="ComponentLibraryContent-tests"{{#if patternOverview}} hidden{{/if}}>
        {{#each componentTests}}
          <div class="ComponentLibraryComponentTestContainer ComponentLibraryComponentTestContainer--{{this.alias}}" hidden>
            <b class="ComponentLibraryComponentTestContainer-title">{{this.title}}</b>
            {{#each this.tests}}
              <details class="ComponentLibraryComponentTest ComponentLibraryComponentTest--{{this.alias}}">
                <summary class="ComponentLibraryComponentTest-summary">
                  {{this.label}}: <span class="ComponentLibraryComponentTest-result is-{{this.class}}">0</span>
                </summary>
                <div class="ComponentLibraryComponentTest-details"></div>
              </details>
            {{/each}}
          </div>
        {{/each}}
      </div>
    </main>
  {{/content}}
{{/extend}}
