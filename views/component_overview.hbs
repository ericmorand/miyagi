{{#extend "iframe"}}
  {{#content "body"}}
    <div class="ComponentLibraryComponents">
      {{#if components}}
        {{#each components}}
          {{#if this.cssFile}}
            <link rel="stylesheet" href="{{this.cssFile}}">
          {{/if}}
          {{#if this.jsFile}}
            <script src="{{this.jsFile}}"></script>
          {{/if}}
          <div class="ComponentLibraryComponent">
            <a href="?component={{this.file}}" class="ComponentLibraryComponent-file">{{this.file}}</a>
            <div class="ComponentLibraryComponent-html">
              {{{this.html}}}
            </div>
          </div>
        {{/each}}
      {{else}}
        There are no components yet.
      {{/if}}
    </div>
  {{/content}}
{{/extend}}
